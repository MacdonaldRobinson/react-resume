{
  "extends": "./tsconfig.base.json",  // Inherit common settings from the base config
  "compilerOptions": {
    "jsx": "react-jsx",              // Enable JSX syntax support (for React 17+)
    "moduleResolution": "bundler",   // Vite uses this for resolving modules
    "lib": ["ES2023", "DOM"],        // Include browser (DOM) and modern JS libs
    "noEmit": false                  // Allow emitting files (build will happen in Vite)
  },
  "include": ["src/**/*"],            // Include all TypeScript files in the `src` folder
  "exclude": ["node_modules"]         // Exclude `node_modules` directory
}
