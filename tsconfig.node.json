{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",  // Set moduleResolution to node for typical React/Node use
    "lib": ["esnext"],
    "allowSyntheticDefaultImports": true,
    "jsx": "react"  // Enable JSX support (for .tsx files)
  },
  "include": [
    "src/**/*.ts",  // Includes all .ts files in src
    "src/**/*.tsx"  // Includes all .tsx files in src
  ],
  "exclude": [
    "node_modules"
  ]
}
