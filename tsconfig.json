{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",  // Change moduleResolution to "bundler"
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,  // Keep this line
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "noEmit": true  // Add this to prevent emitting files (for this configuration)
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
